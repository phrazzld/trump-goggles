{
  "manifest_version": 3,

  "name": "Trump Goggles",
  "short_name": "trumpgoggles", 
  "description": "See the world like Trump does.",
  "version": "2.0.0",

  "action": {
    "default_title": "Trump Goggles",
    "default_icon": {
      "19": "images/goggles-02.png",
      "38": "images/goggles-02.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage", "contextMenus"],

  "host_permissions": ["*://*/*"],

  "content_scripts": [
    {
      "js": [
        "logger.js",
        "error-handler.js",
        "browser-detect.js",
        "browser-adapter.js",
        "performance-utils.js",
        "security-utils.js",
        "trump-mappings.js",
        "dom-processor.js",
        "text-processor.js",
        "mutation-observer.js",
        "dom-modifier.js",
        "tooltip-browser-adapter.js",
        "tooltip-ui.js",
        "tooltip-manager.js",
        "content.js"
      ],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "icons": {
    "16": "images/goggles-02.png",
    "48": "images/goggles-02.png",
    "128": "images/goggles-02.png"
  }
}