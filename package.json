{
  "name": "trump-goggles",
  "version": "2.0.0",
  "description": "See the world like Trump does - Chrome Extension",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "perf-test": "node setup-performance-test.js",
    "verify": "./verify-ci.sh",
    "commit-changes": "git commit"
  },
  "keywords": [
    "chrome-extension",
    "text-replacement"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=7.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@types/chrome": "0.0.318",
    "@types/node": "22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.26.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "15.5.1",
    "open": "10.1.2",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vitest": "^3.1.2"
  }
}
