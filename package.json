{
  "name": "trump-goggles",
  "version": "2.0.0",
  "description": "See the world like Trump does - Chrome Extension",
  "scripts": {
    "preinstall": "node scripts/enforce-pnpm.js",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:prod": "NODE_ENV=production rollup -c",
    "build:clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "pnpm dlx playwright show-report",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "perf-test": "node setup-performance-test.js",
    "verify": "./verify-ci.sh",
    "commit-changes": "git commit",
    "check:pnpm": "node scripts/check-package-manager.js"
  },
  "keywords": [
    "chrome-extension",
    "text-replacement"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=7.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "1.52.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/chrome": "0.0.318",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.26.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "15.5.1",
    "open": "10.1.2",
    "playwright": "1.52.0",
    "prettier": "3.5.3",
    "rollup": "4.40.2",
    "rollup-plugin-copy": "3.5.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "vitest": "^3.1.2"
  }
}
