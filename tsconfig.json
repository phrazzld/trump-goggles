{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "test/**/*.js",
    "coverage/**/*",
    "archive/**/*",
    "background-combined.js",
    "background-cross-browser.js",
    "content-consolidated.js",
    "content-before-optimization.js",
    "performance-test.js",
    "setup-performance-test.js"
  ]
}