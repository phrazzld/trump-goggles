{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2022", "ESNext"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.jsx"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "test/**/*.js",
    "coverage/**/*",
    "archive/**/*",
    "background-combined.js",
    "background-cross-browser.js",
    "content-consolidated.js",
    "content-before-optimization.js",
    "performance-test.js",
    "setup-performance-test.js"
  ]
}
