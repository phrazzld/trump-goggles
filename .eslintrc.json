{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vitest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vitest"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "vitest/expect-expect": "error",
    "vitest/no-disabled-tests": "warn"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "vitest/expect-expect": "error"
      }
    }
  ]
}